<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/bootstrap")

        <style>
            /* Custom container */
            .container-fixed {
              margin: 0 auto;
              max-width: 800px;
            }
            .container-fixed > hr {
              margin: 30px 0;
            }
        </style>
    </head>
    <body>
        <div class="container-fixed">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

    </body>
</html>